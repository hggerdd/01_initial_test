{
    "manifest_version": 2,
    "name": "Simple topics",
    "version": "1.0",
    "description": "Simple topics is tab and booking management based on topics. Only show the open tabs and bookmarks that belong to one topic.",
    "icons": {
      "48": "icons/icon-48.png"
    },
    "browser_action": {
      "default_icon": "icons/icon-32.png",
      "default_title": "Simple topics",
      "default_popup": "popup/popup.html"
    },
    "commands": {
      "_execute_sidebar_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+S"
        },
        "description": "Ã–ffne die Sidebar"
      }
    },
    "sidebar_action": {
      "default_title": "Simple topics",
      "default_panel": "sidebar/sidebar.html",
      "default_icon": "icons/icon-32.png"
    },
    "permissions": [
      "storage",
      "tabs",
      "tabHide",
      "sessions"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "web_accessible_resources": [
      "modals/add-topic.html",
      "modals/category-sets-modal.html",
      "modals/category-sets-modal.js"
    ]
}